  @media screen and (max-width: 549px) {
    #custom-collections-container{
      padding: 30px 15px;
    }

    .custom-collections{
      display: grid;
      grid-gap: 1em;
    }
    
    .collection-card__img-main > img{
      max-width:300px
    }
    .collection-card__img{
      
    max-width:300px
    }
    .main-img-lp{
    	display:block;
    }
    .main-img-pt{
    	display:none;
    }
  } 

  
  @media screen and (min-width: 550px) {
    #custom-collections-container{
      padding: 30px 15px;
    }
    .custom-collections{
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-gap: 1em;
    }
    .collection-card__main-a{
      grid-column: 1/3;
      display:inherit;
    }
    .main-img-lp{
    	display:block;
    }
    .main-img-pt{
    	display:none;
    }
  } 
  
  @media screen and (min-width: 990px) {
    #custom-collections-container{
      max-width: 1500px;
      margin: 0 auto;
      padding:30px 50px;
    }

    .custom-collections{
      grid-template-columns: repeat(4, 1fr);
    }
    .collection-card__main-a{
