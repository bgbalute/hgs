<style>
  @media screen and (max-width: 549px) {
    #our-clients-container{
      padding: 30px 15px;
    }
    .our-clients-section{
      display: grid;
      grid-template-columns: repeat( auto-fit, minmax(100px, 1fr) );
      grid-template-columns: 1fr 1fr;
      text-align: center;
      grid-gap:1em;
    }
     .logo-img{
    	max-width:100px;
    }
  } 
  @media screen and (min-width: 550px) {
    #our-clients-container{
      padding: 30px 15px;
    }
    .our-clients-section{
      display: grid;
      grid-template-columns: repeat( auto-fit, minmax(100px, 1fr) );
      grid-template-columns: 1fr 1fr;
      text-align: center;
      grid-gap:1em;
    }
    .logo-img{
    	max-width:100px;
    }
  } 
  @media screen and (min-width: 990px) {
  	#our-clients-container{
      padding: 30px 50px;
      max-width:1500px;
      margin:0 auto;
    }
    .our-clients-section{
      display: grid;
      grid-template-columns: repeat( auto-fit, minmax(150px, 1fr) );
      grid-gap:1em;
    }
    .logo-img{
    	max-width:150px;
    }
  }
  .logo-img{
  	width:100%;
  }
   
</style>
<div id="our-clients-container">
  <h2 class="title">{{ section.settings.ourclients_title }}</h2>
  <div class="our-clients-section">
	{% for block in section.blocks %}
    	{%- if block.settings.client_logo != blank -%}
          <div><img class="logo-img" src="{{ block.settings.client_logo | img_url: '150x' }}" alt="" /></div>
     	{%- endif -%}
  	{% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Our Clients - Custom",
    "settings": [

                    {
                      "type": "text",
                      "id": "ourclients_title",
                      "default": "OUR CUSTOMERS INCLUDE",
                      "label": "Heading"
                    }
	],
      "blocks": [
        {
              "type": "image",
              "name": "Clients Logo",
              "settings": [
                {
                  "type": "image_picker",
                  "id": "client_logo",
                  "label": "Image",
                  "info": "Upload Company Logo"
                }
                ]
            }
      ],
	"presets": [
				{
					"category": "Custom Section",
					"name": "Our Clients - Custom"
				}
			   ]
  }
{% endschema %}